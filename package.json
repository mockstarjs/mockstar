{
  "name": "mockstar",
  "private": true,
  "scripts": {
    "publish": "git pull && lerna publish --cd-version minor",
    "force-publish": "lerna publish --cd-version patch --force-publish=*",
    "precommit": "lint-staged",
    "commitmsg": "validate-commit-msg",
    "commit": "git-cz "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mockstarjs/mockstar.git"
  },
  "keywords": [
    "mock",
    "service"
  ],
  "author": "helinjiang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mockstarjs/mockstar/issues"
  },
  "homepage": "https://github.com/mockstarjs/mockstar#readme",
  "devDependencies": {
    "commitizen": "^3.0.2",
    "eslint": "^5.7.0",
    "husky": "^1.1.2",
    "lerna": "^3.4.3",
    "lint-staged": "^7.3.0",
    "validate-commit-msg": "^2.14.0"
  },
  "lint-staged": {
    "src/*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
